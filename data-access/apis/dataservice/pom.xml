<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>pentaho</groupId>
    <artifactId>data-access-apis-dataservices</artifactId>
    <version>9.0.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>data-access-api-dataservice</artifactId>
  <description>Pentaho Dataservice Data Access APIs</description>

  <properties>
    <jar-bundle-phase>package</jar-bundle-phase>
    <set-license-refs-phase>generate-sources</set-license-refs-phase>
    <generate-bundle-manifest-phase>process-classes</generate-bundle-manifest-phase>
    <replace-license-refs-phase>process-sources</replace-license-refs-phase>
  </properties>

  <dependencies>
    <dependency>
      <groupId>pentaho</groupId>
      <artifactId>pdi-dataservice-client-plugin-api</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.pentaho.det</groupId>
      <artifactId>data-access-api</artifactId>
      <version>${project.version}</version>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
